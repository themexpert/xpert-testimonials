<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		<field name="id" type="hidden"
			label="TESTIMONIAL_ID_LABEL"
			readonly="true"
			required="true"
			size="10"
			default="0"
		/>

		<field
			id="contenthistory"
			name="contenthistory"
			type="contenthistory"
			data-typeAlias="com_xpert_testimonials.testimonial"
			label="JTOOLBAR_VERSIONS" />

		<field name="title" type="hidden"
			description="COM_XPERT_TESTIMONIALS_FIELD_TITLE_DESC"
			label="JGLOBAL_TITLE"
			required="false"
			size="30"
		/>

		<field name="alias" type="hidden"
			description="COM_XPERT_TESTIMONIALS_FIELD_ALIAS_DESC"
			label="JFIELD_ALIAS_LABEL"
			hint="JFIELD_ALIAS_PLACEHOLDER"
			size="45"
		/>

		<field name="name" type="text"
			class="input-xlarge input-large-text"
			size="40" label="COM_XPERT_TESTIMONIALS_FIELD_NAME_LABEL"
			description="COM_XPERT_TESTIMONIALS_FIELD_NAME_DESC" required="true" />

		<field name="designation" type="text"
			class="input-xlarge"
			size="40" label="COM_XPERT_TESTIMONIALS_FIELD_DESIGNATION_LABEL"
			description="COM_XPERT_TESTIMONIALS_FIELD_DESIGNATION_DESC" required="true" />

		<field name="email" type="text"
			class="input-xlarge"
			size="40" label="COM_XPERT_TESTIMONIALS_FIELD_EMAIL_LABEL"
			description="COM_XPERT_TESTIMONIALS_FIELD_EMAIL_DESC" required="true" />

		<field name="url" type="url"
			class="input-xlarge form-input"
			filter="url"
			size="40" label="COM_XPERT_TESTIMONIALS_FIELD_URL_LABEL"
			description="COM_XPERT_TESTIMONIALS_FIELD_URL_DESC"/>

			<fields name="images">
				<fieldset name="images" label="JGLOBAL_FIELDSET_IMAGE_OPTIONS">
					<field
						name="author_image" type="file"
						label="COM_XPERT_TESTIMONIALS_FIELD_AUTHOR_IMAGE_LABEL"
						description="COM_XPERT_TESTIMONIALS_FIELD_AUTHOR_IMAGE_DESC"
						size="10"
						class="input-image testimonial-author-image"
						accept="image/*" />
				</fieldset>
			</fields>


		<field name="description" type="editor"
			buttons="false"
			editor="codemirror"
			description="COM_XPERT_TESTIMONIALS_FIELD_DESCRIPTION_DESC"
			filter="safehtml"
			label="JGLOBAL_DESCRIPTION"
			asset_id="com_xpert_testimonials"
		/>

		<field name="state" type="list"
			default="1"
			description="JFIELD_PUBLISHED_DESC"
			label="JSTATUS"
			size="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="catid" type="categoryedit"
			description="COM_XPERT_TESTIMONIALS_FIELD_CATEGORY_DESC"
			extension="com_xpert_testimonials"
			label="JCATEGORY"
			required="true"
		/>

		<field name="url" type="url"
			filter="url"
			description="COM_XPERT_TESTIMONIALS_FIELD_URL_DESC"
			label="COM_XPERT_TESTIMONIALS_FIELD_URL_LABEL"
			size="45"
		/>

		<field
			name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
			labelclass="control-label" />

	</fieldset>
	<fields name="metadata">
		<fieldset name="jmetadata"
			label="JGLOBAL_FIELDSET_METADATA_OPTIONS">

				<field name="robots"
					type="hidden"
					filter="unset"
					label="JFIELD_METADATA_ROBOTS_LABEL"
					description="JFIELD_METADATA_ROBOTS_DESC"
					labelclass="control-label"
					>
					<option value="">JGLOBAL_USE_GLOBAL</option>
					<option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
					<option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
					<option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
					<option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
				</field>

				<field name="author"
					type="hidden"
					filter="unset"
					label="JAUTHOR"
					description="JFIELD_METADATA_AUTHOR_DESC"
					size="20"
					labelclass="control-label"
				/>

				<field name="rights"
					type="hidden"
					label="JFIELD_META_RIGHTS_LABEL"
					filter="unset"
					description="JFIELD_META_RIGHTS_DESC"
					required="false"
					labelclass="control-label"
				/>

				<field name="xreference"
					type="hidden"
					filter="unset"
					label="COM_CONTENT_FIELD_XREFERENCE_LABEL"
					description="COM_CONTENT_FIELD_XREFERENCE_DESC"
					class="inputbox"
					size="20"
					labelclass="control-label" />

		</fieldset>
	</fields>
</form>
